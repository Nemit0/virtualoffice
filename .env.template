# API Provider Selection
# Choose which API endpoint to use for LLM calls
# Options: "auto" (default), "openai_key1", "openai_key2", "azure"
# - "auto": Automatically selects based on free tier limits (key1 → key2 → azure)
# - "openai_key1": Always use OPENAI_API_KEY
# - "openai_key2": Always use OPENAI_API_KEY2
# - "azure": Always use Azure OpenAI
VDOS_API_PROVIDER = auto

# Experimental: Override all model selections with a fixed model
# Set FIX_ALL_GPT_MODEL=true to enable, then specify model in FIXED_MODEL
# Example: FIXED_MODEL=gpt-4o or gpt-4o-mini
FIX_ALL_GPT_MODEL = false
FIXED_MODEL = gpt-4o

AZURE_AREA =
AZURE_OPENAI_API_KEY =
AZURE_OPENAI_ENDPOINT =

# OpenAI API Configuration
# Temperature controls randomness in GPT responses (0.0 = deterministic, 2.0 = very random)
# Default: Not set (uses OpenAI API default of ~1.0)
# Recommended values:
#   - 0.3-0.5 for consistent, factual responses (style filtering, data extraction)
#   - 0.7-1.0 for balanced creativity (general planning, conversations)
#   - 1.2-1.5 for more creative outputs (brainstorming, varied communication)
# VDOS_OPENAI_TEMPERATURE = 1.0

# Timeout for OpenAI API calls in seconds (default: 120)
# VDOS_OPENAI_TIMEOUT = 120

# Communication Style Filter Configuration
# Enable/disable the GPT-4o powered communication style filter
# When enabled, all generated messages are transformed to match persona writing styles
# Default: true
VDOS_STYLE_FILTER_ENABLED = true

# Communication Generator Configuration (Fallback Communications)
# DEPRECATED: Use VDOS_ENABLE_AUTO_FALLBACK instead
# Enable/disable GPT-powered fallback communication generation
# When enabled, generates diverse, context-aware communications when JSON absent from hourly plans
# Uses GPT-4o-mini for cost-effective generation (~$0.00024 per call)
# Default: false (changed from true to reduce email volume)
VDOS_GPT_FALLBACK_ENABLED = false

# Email Volume Reduction Configuration
# Enable/disable automatic fallback communication generation
# When false (default), personas only communicate when they have something specific to say
# When true, restores legacy behavior with automatic fallback communications
# Default: false
VDOS_ENABLE_AUTO_FALLBACK = false

# Inbox-Driven Reply Configuration
# Enable/disable inbox-driven reply generation
# When enabled, personas reply to unreplied messages in their inbox
# Default: true
VDOS_ENABLE_INBOX_REPLIES = true

# Probability of replying to inbox messages (0.0-1.0)
# Controls how often personas reply to received messages
# Default: 0.80 (80% of unreplied messages get replies)
VDOS_INBOX_REPLY_PROBABILITY = 0.80

# Daily Message Limits (Safety Net)
# Hard limits on daily message volume per persona to prevent runaway generation
# These limits apply to ALL communications (JSON and inbox-driven)
# Default: 50 emails/day, 100 chats/day
VDOS_MAX_EMAILS_PER_DAY = 50
VDOS_MAX_CHATS_PER_DAY = 100

# Base probability for generating fallback communications (0.0-1.0)
# Subject to participation balancing to prevent message dominance
# Default: 0.6
VDOS_FALLBACK_PROBABILITY = 0.6

# Model to use for fallback communication generation
# Default: gpt-4o-mini (cost-effective, fast)
# Alternative: gpt-4o (higher quality, more expensive)
VDOS_FALLBACK_MODEL = gpt-4o-mini

# Email Threading Configuration
# Target rate for generating threaded email replies (0.0-1.0)
# When enabled, personas will reply to received emails at this rate
# Higher values create more conversational email threads
# Default: 0.3 (30% of received emails get replies)
VDOS_THREADING_RATE = 0.3

# Participation Balancing Configuration
# Enable/disable participation balancing to prevent message dominance
# When enabled, throttles high-volume senders and boosts low-volume senders
# Ensures realistic distribution of communications across all personas
# Default: true
VDOS_PARTICIPATION_BALANCE_ENABLED = true

